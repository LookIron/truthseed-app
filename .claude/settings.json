{
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(pnpm:*)",
      "Bash(npm:*)",
      "Bash(find:*)",
      "Bash(mv:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(cp:*)",
      "Bash(chmod:*)",
      "Bash(touch:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(python3:*)",
      "Bash(node:*)",
      "Bash(npx:*)",
      "Write",
      "Bash(./scripts/start.sh:*)",
      "Bash(./scripts/stop_apps.sh:*)",
      "Bash(./scripts/check_ports.sh:*)",
      "Bash(./scripts/copy_dot_env.sh:*)",
      "Bash(./scripts/generate-icons.sh:*)",
      "Bash(./scripts/purge_tree.sh:*)",
      "Bash(./scripts/delete_pr.sh:*)",
      "Bash(./scripts/clear_issue_comments.sh:*)",
      "Bash(./scripts/kill_trigger_webhook.sh:*)",
      "Bash(./scripts/expose_webhook.sh:*)"
    ],
    "deny": [
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(rm -rf:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/.claude/hooks/pre_tool_use.py || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/.claude/hooks/post_tool_use.py || true"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/.claude/hooks/notification.py --notify || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/.claude/hooks/stop.py --chat || true"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/.claude/hooks/subagent_stop.py || true"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/.claude/hooks/pre_compact.py || true"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $CLAUDE_PROJECT_DIR/.claude/hooks/user_prompt_submit.py --log-only || true"
          }
        ]
      }
    ]
  }
}
